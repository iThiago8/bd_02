@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Welcome Card -->
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-flower1 display-1 text-success"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-3">Bem-vindo ao Greenhouse</h1>
                    <p class="lead text-muted mb-4">
                        Sistema de gerenciamento e monitoramento de plantas
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Plant" asp-action="Index" class="btn btn-success btn-lg">
                            <i class="bi bi-list-ul me-2"></i>Ver Plantas
                        </a>
                        <a asp-controller="Plant" asp-action="Create" class="btn btn-outline-success btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Nova Planta
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Info -->
            <div class="row g-3 mt-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-moisture display-5 text-success mb-2"></i>
                            <h5 class="fw-bold">Monitoramento</h5>
                            <p class="text-muted small mb-0">Acompanhe os sensores das suas plantas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-gear display-5 text-success mb-2"></i>
                            <h5 class="fw-bold">Gestão Simples</h5>
                            <p class="text-muted small mb-0">Gerencie suas plantas facilmente</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .btn-success, .btn-outline-success {
        transition: transform 0.2s;
    }

        .btn-success:hover, .btn-outline-success:hover {
            transform: translateY(-2px);
        }
</style>