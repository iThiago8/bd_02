@model Greenhouse.Models.Plant

@{
    ViewData["Title"] = "Editar planta";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h3 class="mb-0">
                        <i class="bi bi-flower1 me-2"></i>Editar Planta
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-tag me-1"></i>Nome da Planta
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ex: Orquídea, Samambaia..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SensorValue" class="form-label fw-semibold">
                                <i class="bi bi-moisture me-1"></i>Valor do Sensor
                            </label>
                            <input asp-for="SensorValue" class="form-control form-control-lg" placeholder="Digite o valor" />
                            <span asp-validation-for="SensorValue" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SensorEvent" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>Evento do Sensor
                            </label>
                            <input asp-for="SensorEvent" class="form-control form-control-lg" placeholder="Descreva o evento" />
                            <span asp-validation-for="SensorEvent" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save me-2"></i>Salvar Planta
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }

    .btn-success {
        background: linear-gradient(135deg, #198754 0%, #157347 100%);
        border: none;
        transition: transform 0.2s;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
        }
</style>