<h3>Criar uma nova matrícula</h3>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label for="StudentId" class="control-label">Student</label>

        <select name="StudentId" asp-items="@(ViewBag.StudentId as SelectList)" class="form-control">
            <option value="">-- Selecione um estudante --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="CourseId" class="control-label">Course</label>

        <select name="CourseId" asp-items="@(ViewBag.CourseId as SelectList)" class="form-control">
            <option value="">-- Selecione um curso --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Criar matrícula</button>
</form>